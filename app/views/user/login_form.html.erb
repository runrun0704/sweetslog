<div class="login_form">
    <div class="container">
        <div class="form-heading">
            <h2>ログイン</h2>
            <p>login</p>
        </div>
        <! ログインフォーム >
        <%= form_tag("/login") do%>
            <div class="user_form">
                <h4>name:</h4>
                <div class="user_login_form">
                    <input name="name">
                </div>

                <h4>password:</h4>
                <div class="user_login_form">
                    <input name="password" type="password">
                </div>

                <span class="form-submit"><input type="submit" value="ログイン" ></span>
            </div>
        <% end %>
    </div>
</div>        