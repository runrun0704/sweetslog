<!DOCTYPE html>
<html>
  <head>
    <title>SweetsLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("/home/top") do %>
          <img src="/css_image/sweetslog_logo.jpg">
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>

          <li>
            <%= link_to("投稿一覧","/index") %>
          </li> 
          <li>
            <%= link_to("新規投稿","/new") %>
          </li>
          <li>
            <%= link_to("ログアウト","/logout",{method: :post})%>
          </li>
          <li>
            <%= link_to(@current_user.name,"/user/#{@current_user.id}/show") %>
          </li>
        <% else %>
          <li>
            <%= link_to("sweetslogとは","/about") %>
          </li>
          <li>
            <%= link_to("新規登録","/user/new") %>
          </li>
          <li>
            <%= link_to("ログイン","/login") %>
          </li>
        <% end %>   
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
    
  </body>

</html>
