<div class="post-new j">
    <div class="container">
        <! 新規投稿フォームのヘッダー >
        <div class="form-heading">
            <h2>投稿する</h2>
            <p>new post</p>
        </div>
        <! 新規投稿フォーム >
        <div class="form-main">
            <%= form_with model: @post, url:"/post/create", method: :post do |form| %>
                <h3>タイトル</h3>
                <%= form.text_area :title , class:'form-ttl form' %>

                <! 画像のプレビュー >
                <h3>画像を載せる</h3>
                <div class="field">
                    <img src="" id="tl_img" class="img_preview" style="max-width:80%;max-height:600px;" />
                </div>
                <%= form.file_field :image, id:'edit_image'%>

                <h3>スイーツの説明と感想</h3>
                <%= form.text_area :content_1 ,class:'form-content form' %>

                <h3>お店の情報</h3>
                <%= form.text_area :content_2 , class:'form-content form'%>
                
                <span class="form-submit"><%= form.submit value:'投稿' %></span>
            <% end %>
        </div>
    </div>
</div>